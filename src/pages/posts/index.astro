---
import Layout from "../../layouts/Layout.astro";

const posts = await Astro.glob('./*.md');
---

<Layout title="posts">
    {posts.map((post) => (
        <article>
            <a href={post.url}>
                <h2>{post.frontmatter.title}</h2>
            </a>
            <a href={post.url} style="text-decoration: none;">
                <p>{post.frontmatter.description} â€¢ {post.frontmatter.date}</p>
            </a>
        </article>
    ))}
</Layout>